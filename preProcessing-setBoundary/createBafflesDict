FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createBafflesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Whether to convert internal faces only (so leave boundary faces intact).
// This is only relevant if your face selection type can pick up boundary
// faces.
createBaffles yes;
deleteFaces   true; 
internalFacesOnly true;

// Baffles to create.
baffles
{
    cyclicFacesNew
    {
        type        faceZone;
        zoneName    cyclicFaces;

        patches
        {
            master
            {
                //- Master side patch

                name            gridWall_large;
                type            cyclic;
                neighbourPatch  gridWall_small;

                //- Optional override of added patchfields. If not specified
                //  any added patchfields are of type calculated.
            }
            slave
            {
                //- Slave side patch

                name            gridWall_small;
                type            cyclic;
                neighbourPatch  gridWall_large;

            }
        }
    }
}


